<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <data>
        <record id="location_form" model="ir.ui.view">
            <field name="name">x.location.form</field>
            <field name="model">x.location</field>
            <field name="arch" type="xml">
                <form>
                        <group>
                            <field name="name"/>
                        </group>
                </form>
            </field>
        </record>


        <record id="location_tree" model="ir.ui.view">
            <field name="name">x.location.tree</field>
            <field name="model">x.location</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>


        <record id="location_search" model="ir.ui.view">
            <field name="name">x.location.search</field>
            <field name="model">x.location</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                </search>
            </field>
        </record>


        <record id="list_location_action" model="ir.actions.act_window">
            <field name="name">Locations</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">x.location</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>
