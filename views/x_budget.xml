<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <data>
        <record id="budget_form" model="ir.ui.view">
            <field name="name">x.budget.form</field>
            <field name="model">x.budget</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="status" widget="statusbar" statusbar_visible="bad,good,wealthy"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="player_id"/>
                            <field name="amount" widget='monetary'/>
                            <field name="remain" widget='monetary'/>
                        </group>
                        <label for="fund_id"/>
                        <field name="fund_id">
                            <tree editable="bottom">
                                <field name="player_id"/>
                                <field name="amount"/>
                                <field name="charge_date"/>
                                <field name="status"/>
                            </tree>
                        </field>
                        <label for="fee_ids"/>
                        <field name="fee_ids">
                            <tree editable="bottom">
                                <field name="name"/>
                                <field name="play_day"/>
                                <field name="location"/>
                                <field name="fee_total"/>
                                <field name="payer"/>
                                <field name="status"/>
                            </tree>
                        </field>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>


        <record id="budget_tree" model="ir.ui.view">
            <field name="name">x.budget.tree</field>
            <field name="model">x.budget</field>
            <field name="arch" type="xml">
                <tree decoration-success="status == 'wealthy'"
                      decoration-danger="status == 'bad'">
                    <field name="name"/>
                    <field name="player_id"/>
                    <field name="amount"/>
                    <field name="remain"/>
                    <field name="status"/>
                </tree>
            </field>
        </record>


        <record id="budget_search" model="ir.ui.view">
            <field name="name">x.budget.search</field>
            <field name="model">x.budget</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="amount"/>
                    <field name="remain"/>
                    <field name="fund_id"/>
                </search>
            </field>
        </record>


        <record id="list_budget_action" model="ir.actions.act_window">
            <field name="name">Budget</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">x.budget</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>
