<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <data>
        <record id="fee_form" model="ir.ui.view">
            <field name="name">x.fee.form</field>
            <field name="model">x.fee</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="play_day"/>
                                <field name="playing_time"/>
                                <field name="location"/>
                            </group>
                            <group>
                                <field name="fee_total"/>
                                <field name="payer"/>
                                <field name="league_id"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="player_tree" model="ir.ui.view">
            <field name="name">x.fee.tree</field>
            <field name="model">x.fee</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="play_day"/>
                    <field name="playing_time"/>
                    <field name="fee_total"/>
                    <field name="payer"/>
                    <field name="location"/>
                    <field name="league_id"/>
                </tree>
            </field>
        </record>


        <record id="list_fee" model="ir.actions.act_window">
            <field name="name">Fee</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">x.fee</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>
