<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <data>
        <record id="fee_form" model="ir.ui.view">
            <field name="name">x.fee.form</field>
            <field name="model">x.fee</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                            <field name="status" widget="statusbar" statusbar_visible="draft,paid,refunded" options="{'clickable': '1'}"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="play_day"/>
                                <field name="location"/>
                            </group>
                            <group>
                                <field name="fee_total"/>
                                <field name="payer"/>
                                <field name="league_id"/>
                                <field name="budget_id"/>
                            </group>
                        </group>
                        <label for="note"/>
                        <field name="note"/>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>


        <record id="fee_tree" model="ir.ui.view">
            <field name="name">x.fee.tree</field>
            <field name="model">x.fee</field>
            <field name="arch" type="xml">
                <tree decoration-muted="status == 'draft' " decoration-success="status == 'paid'"
                      decoration-info="status == 'refunded'">
                    <field name="name"/>
                    <field name="play_day"/>
                    <field name="fee_total"/>
                    <field name="payer"/>
                    <field name="location"/>
                    <field name="league_id"/>
                    <field name="budget_id"/>
                    <field name="status"/>
                </tree>
            </field>
        </record>


        <record id="fee_search" model="ir.ui.view">
            <field name="name">x.fee.search</field>
            <field name="model">x.fee</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="play_day"/>
                    <field name="fee_total"/>
                    <field name="payer"/>
                    <field name="location"/>
                    <field name="league_id"/>
                </search>
            </field>
        </record>


        <record id="list_fee" model="ir.actions.act_window">
            <field name="name">Fee</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">x.fee</field>
            <field name="view_mode">tree,form</field>
        </record>

