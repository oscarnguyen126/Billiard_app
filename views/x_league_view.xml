<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <data>
        <record id="league_form" model="ir.ui.view">
            <field name="name">x.league.form</field>
            <field name="model">x.league</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button type="object" name="start_league_button" string="Start league"
                                attrs="{'invisible': [('status','in',('progress', 'cancelled'))]}"
                                class="oe_highlight"/>
                        <button type="object" name="cancel_league_button" string="Cancel league"
                                attrs="{'invisible': [('status','in',('draft', 'cancelled'))]}" class="oe_highlight"/>
                        <field name="status" widget="statusbar" statusbar_visible="draft,progress,completed,cancelled"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button type="object" name="action_show_matches" string="Matches"
                                    class="oe_stat_button" icon="fa-calendar">
                            </button>
                            <button type="object" name="action_open_fee" string="Fee"
                                    class="oe_stat_button" icon="fa-calendar">
                                <field name="total_fee"/>
                            </button>
                        </div>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="law_id"/>
                                <field name="type"/>
                                <field name="total_player" attrs="{'invisible': [('type','=','dual')]}"/>
                                <field name="total_team" attrs="{'invisible': [('type','=','solo')]}"/>
                                <field name="total_matches"/>
                                <!--                            <field name="match_ids">-->
                                <!--                                <tree editable="bottom">-->
                                <!--                                    <field name="formula"/>-->
                                <!--                                    <field name="player1_id"/>-->
                                <!--                                    <field name="player2_id" options="{'no_create': True, 'no_create_edit': True}"/>-->
                                <!--                                    <field name="team_id1"/>-->
                                <!--                                    <field name="team_id2"/>-->
                                <!--                                    <field name="line_ids"/>-->
                                <!--                                </tree>-->
                                <!--                            </field>-->
                            </group>
                            <group>
                                <field name="start_date"/>
                                <field name="stop_date"/>
                                <field name="location"/>
                                <field name="champion"
                                       attrs="{'invisible': [('status','in',('draft','progress','cancelled'))]}"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Player">
                                <field name="player_ids"/>
                            </page>
                            <page string="Team">
                                <field name="team_ids"/>
                            </page>
                        </notebook>
                        <label for="note"/>
                        <field name="note"/>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>


        <record id="league_tree" model="ir.ui.view">
            <field name="name">x.league.tree</field>
            <field name="model">x.league</field>
            <field name="arch" type="xml">
                <tree decoration-muted="status == 'draft' " decoration-success="status == 'completed'"
                      decoration-danger="status == 'cancelled'">
                    <field name="name"/>
                    <field name="law_id"/>
                    <field name="type"/>
                    <field name="start_date"/>
                    <field name="stop_date"/>
                    <field name="status"/>
                    <field name="champion" attrs="{'invisible': [('status','in',('draft','progress'))]}"/>
                </tree>
            </field>
        </record>


        <record id="league_search" model="ir.ui.view">
            <field name="name">x.league.search</field>
            <field name="model">x.league</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="law_id"/>
                    <field name="type"/>
                    <field name="start_date"/>
                    <field name="stop_date"/>
                </search>
            </field>
        </record>


        <record id="league_des" model="ir.actions.act_window">
            <field name="name">Billiard</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">x.league</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Welcome to the Billiard Club!
                </p>
            </field>
        </record>

    </data>
</odoo>