<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <data>
        <record id="standing_form" model="ir.ui.view">
            <field name="name">x.standing.form</field>
            <field name="model">x.standing</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="player_id"/>
                            <field name="balls"/>
                            <field name="wins"/>
                            <field name="points"/>
                            <field name="league_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="standing_tree" model="ir.ui.view">
            <field name="name">x.standing.tree</field>
            <field name="model">x.standing</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="player_id"/>
                    <field name="balls"/>
                    <field name="wins"/>
                    <field name="points"/>
                    <field name="league_id"/>
                </tree>
            </field>
        </record>


        <record id="standing_search" model="ir.ui.view">
            <field name="name">x.standing.search</field>
            <field name="model">x.standing</field>
            <field name="arch" type="xml">
                <search>
                    <field name="player_id"/>
                    <field name="balls"/>
                    <field name="wins"/>
                    <field name="points"/>
                    <field name="league_id"/>
                </search>
            </field>
        </record>


        <record id="standing_action" model="ir.actions.act_window">
            <field name="name">Standing</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">x.standing</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>
