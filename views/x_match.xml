<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <data>
        <record id="match_form" model="ir.ui.view">
            <field name="name">x.match.form</field>
            <field name="model">x.match</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="league_id"/>
                                <field name="type_league"/>
                            </group>
                            <group>
                                <field name="start_time"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="player1_id"
                                       attrs="{'invisible': [('type_league', '=', 'dual')], 'required': [('type_league', '=', 'solo')]}"/>
                                <field name="team_id1"
                                       attrs="{'invisible': [('type_league', '=', 'solo')], 'required': [('type_league', '=', 'dual')]}"/>
                            </group>
                            <group>
                                <field name="player2_id" options="{'no_create': True, 'no_create_edit': True}"
                                       attrs="{'invisible': [('type_league', '=', 'dual')], 'required': [('type_league', '=', 'solo')]}"/>
                                <field name="team_id2"
                                       attrs="{'invisible': [('type_league', '=', 'solo')], 'required': [('type_league', '=', 'dual')]}"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Result">
                                <field name="line_ids">
                                    <tree editable="bottom" create="0" edit="1" delete="0">
                                        <field name="player_id" readonly="1"/>
                                        <field name="participant_id" widget="Many2many_tags"/>
                                        <field name="team_id" readonly="1"/>
                                        <field name="ball"/>
                                        <field name="is_win"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>


        <record id="match_tree" model="ir.ui.view">
            <field name="name">x.match.tree</field>
            <field name="model">x.match</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="type_league"/>
                </tree>
            </field>
        </record>


        <record id="match_search" model="ir.ui.view">
            <field name="name">x.match.search</field>
            <field name="model">x.match</field>
            <field name="arch" type="xml">
                <search>
                    <field name="league_id"/>
                    <field name="name"/>
                    <field name="type_league"/>
                    <field name="start_time"/>
                    <field name="location"/>
                    <group expand="0" string="Group By">
                        <filter string="League" name="league" context="{'group_by': 'league_id'}"/>
                    </group>
                </search>
            </field>
        </record>


        <record id="match_result" model="ir.actions.act_window">
            <field name="name">Match result</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">x.match</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>